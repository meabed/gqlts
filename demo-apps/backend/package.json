    "nexus": "1.3.0",
    "supertest": "7.0.0",
    "ts-node": "10.9.2",
    "typescript": "5.7.3",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@types/jest": "29.5.14",
    "@types/supertest": "6.0.2",
