    "graphql-yoga": "5.15.1",
    "nexus": "1.3.0",
    "supertest": "7.1.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.2",
    "uuid": "11.1.0"
  },
  "devDependencies": {
    "@types/jest": "30.0.0",
    "@types/supertest": "6.0.3",
    "jest": "30.1.1",
    "ts-jest": "29.4.1"
